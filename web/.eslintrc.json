{
  "parser": "babel-eslint",

  "plugins": [
    "react",
    "react-hooks",
    "@typescript-eslint"
  ],

  "extends": [
    "plugin:react/recommended",
    "airbnb"
  ],

  "env": {
    "browser": true,
    "mocha": true
  },

  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
 
  "rules": {
    "react/jsx-filename-extension": 0,
    "indent": [ "error", 4 ],
    "react/jsx-indent": [ "error", 4 ],
    "react/jsx-indent-props": [ "error", 4 ],
    "@typescript-eslint/indent": [ "error", 4 ]
  }
}